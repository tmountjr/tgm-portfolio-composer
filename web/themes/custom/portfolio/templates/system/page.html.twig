{#
/**
 * Regions:
 * - page.header: Page header stuff.
 * - page.sidebar_main: Main sidebar (used for the site menu).
 * - page.content: The main content of the current page.
 * - page.content_bottom: The bottom of hte main content region.
 * - page.footer: Items in the footer region.
 */
#}

<div id="layout" class="pure-g">
  <a id="main-content" tab-index="-1"></a>

  <div class="sidebar pure-u-1 pure-u-md-1-4">
    <div class="pure-menu-horizontal">
      <a href="/" class="brand">
        <h1 class="pure-menu-heading">
          <span class="first-name">T </span>
          <span class="last-name">M</span>
        </h1>
      </a>

      {% if page.sidebar_main %}
        {{ page.sidebar_main }}
      {% endif %}
    </div>
  </div>

  <div class="content pure-u-1 pure-u-md-3-4">
    {{ page.content }}
    {{ page.content_bottom }}
  </div>
</div>

{% if page.footer %}
  <div id="footer-wrapper" class="pure-g">
    <div id="spacer" class="pure-u-md-1-4"></div>
    <div class="footer pure-u-1 pure-u-md-3-4">
      {{ page.footer }}
    </div>
  </div>
{% endif %}
